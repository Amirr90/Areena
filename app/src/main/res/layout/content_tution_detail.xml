<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".TutionDetail"
    tools:showIn="@layout/activity_tution_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_margin="@dimen/_10sdp"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/margin_4"
            app:cardCornerRadius="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/antic"
                    android:padding="@dimen/_10sdp"
                    android:text="Teacher For Commerce,Biology,Chemistry, is required at Rajajipuram"
                    android:textAlignment="center"
                    android:textColor="@color/default_inactive_color"
                    android:textSize="20sp"
                    android:visibility="visible" />

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/textView5"
                    android:background="@android:color/black" />


                <ProgressBar
                    android:layout_centerInParent="true"
                    android:elevation="@dimen/_10sdp"
                    android:id="@+id/progressBar5"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:id="@+id/detail_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line"
                    android:layout_margin="@dimen/_10sdp">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/antic"
                                android:padding="@dimen/_5sdp"
                                android:text="JobId"
                                android:textColor="@color/default_inactive_color"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/job_id"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:fontFamily="@font/antic"
                                android:gravity="right"
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/default_inactive_color"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:fontFamily="@font/antic"
                                android:padding="@dimen/_5sdp"
                                android:text="Tution Fee"
                                android:textColor="@color/default_inactive_color"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView

                                android:id="@+id/tution_Fee"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:fontFamily="@font/antic"
                                android:gravity="right"
                                android:padding="@dimen/_5sdp"
                                android:textColor="@android:color/holo_green_dark"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:fontFamily="@font/antic"
                                android:padding="@dimen/_5sdp"
                                android:text="Parent Name"
                                android:textColor="@color/default_inactive_color"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/parent_name"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.3"
                                android:fontFamily="@font/antic"
                                android:gravity="right"
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/default_inactive_color"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/antic"
                                android:padding="@dimen/_5sdp"
                                android:text="City"
                                android:textColor="@color/default_inactive_color"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/city"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:fontFamily="@font/antic"
                                android:gravity="right"
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/default_inactive_color"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/antic"
                                android:padding="@dimen/_5sdp"
                                android:text="Locality"
                                android:textColor="@color/default_inactive_color"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/locality"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:fontFamily="@font/antic"
                                android:gravity="right"
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/default_inactive_color"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8"
                                android:fontFamily="@font/antic"
                                android:padding="@dimen/_5sdp"
                                android:text="Tution For"
                                android:textColor="@color/default_inactive_color"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tution_for"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:fontFamily="@font/antic"
                                android:gravity="right"
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/default_inactive_color"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/antic"
                                android:padding="@dimen/_5sdp"
                                android:text="Subject"
                                android:textColor="@color/default_inactive_color"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/subject"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:fontFamily="@font/antic"
                                android:gravity="right"
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/default_inactive_color"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/antic"
                                android:padding="@dimen/_5sdp"
                                android:text="Credits To Pay"
                                android:textColor="@color/default_inactive_color"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/credits_to_pay"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/antic"
                                android:gravity="right"
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/default_inactive_color"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/antic"
                                android:padding="@dimen/_5sdp"
                                android:text="Contact Number"
                                android:textColor="@color/default_inactive_color"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/contact_number"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/antic"
                                android:gravity="right"
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/default_inactive_color"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/antic"
                                android:gravity="center_vertical"
                                android:padding="@dimen/_5sdp"
                                android:text="Address"
                                android:textColor="@color/default_inactive_color"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/address"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:fontFamily="@font/antic"
                                android:gravity="right"
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/default_inactive_color"
                                android:textSize="18sp" />
                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>



        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/disable_btn"
            android:fontFamily="@font/antic"
            android:padding="@dimen/_10sdp"
            android:text="Hired"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/_10sdp"
            android:fontFamily="@font/antic"
            android:padding="@dimen/_10sdp"
            android:text="note: Buy Lead To get  contact details"
            android:textAlignment="center"
            android:textColor="@color/default_inactive_color"
            android:textSize="14sp"
            android:textStyle="italic"
            android:visibility="visible" />
    </LinearLayout>
</ScrollView>